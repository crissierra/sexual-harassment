<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="@drawable/degrade1"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".VideosYoutube">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:gravity="top"
    android:layout_weight="0.07"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"

        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center|left"
            android:text="volver"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:textStyle="bold" android:background="@color/color1"
            android:id="@+id/back"
            android:layout_height="30dp" />

    </FrameLayout>

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="0.8"
        android:gravity="top"
        android:orientation="vertical">


        <me.biubiubiu.justifytext.library.JustifyTextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Podrás encontrar información interesante en los siguientes videos."
            android:textColor="@android:color/background_light"
            android:textSize="15sp" />

        <me.biubiubiu.justifytext.library.JustifyTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Da click en los siguientes enlaces"
            android:textColor="@android:color/background_light"
            android:textSize="15sp" />


        <Button
            android:id="@+id/botonyoutube1"
            android:layout_width="103dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botonyoutube"
            android:contentDescription="@string/app_name"
            android:gravity="center" />

        <Button
            android:id="@+id/botonyoutube2"
            android:layout_width="103dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botonyoutube"
            android:contentDescription="@string/app_name"
            android:gravity="center" />

        <Button
            android:id="@+id/botonyoutube3"
            android:layout_width="103dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botonyoutube"
            android:contentDescription="@string/app_name"
            android:gravity="center" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:contentDescription=""
            app:srcCompat="@drawable/logopng"
            tools:ignore="ContentDescription" />


    </LinearLayout>




</LinearLayout>
