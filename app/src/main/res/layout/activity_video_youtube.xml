<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="@drawable/degrade"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".videoYoutube">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:gravity="top"
    android:layout_weight="0.07"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/color2"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center|left"
            android:text="volver"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:background="@color/color1"
            android:id="@+id/back"
            android:layout_height="30dp" />

    </FrameLayout>

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="0.8"
        android:gravity="top"
        android:orientation="vertical">


        <me.biubiubiu.justifytext.library.JustifyTextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/infovideo"
            android:textColor="@android:color/background_light"
            android:textSize="15sp" />

        <me.biubiubiu.justifytext.library.JustifyTextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/colorControlHighlight"
            android:layout_marginTop="5dp"
            android:text="@string/infovideo1"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            android:textStyle="italic" />


        <me.biubiubiu.justifytext.library.JustifyTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/infovideo2"
            android:textColor="@android:color/background_light"
            android:textSize="15sp" />


        <Button
            android:id="@+id/botonyoutube"
            android:layout_width="103dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botonyoutube"
            android:contentDescription="@string/app_name"
            android:gravity="center" />



    </LinearLayout>






<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_weight="0.3"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logotres"
        android:contentDescription=""
        tools:ignore="ContentDescription"
        android:layout_marginRight="8dp"/>


</LinearLayout>




</LinearLayout>
