<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="@drawable/degrade"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".resultado">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:gravity="top"
    android:layout_weight="0.25"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/color2"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center|left"
            android:text="volver"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:background="@color/color1"
            android:id="@+id/back"
            android:layout_height="30dp" />



    </FrameLayout>




</LinearLayout>







<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_weight="0.3"
    android:orientation="vertical">


    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El resultado de su test de Burnout es:"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="25sp" />



</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/rta_brainstress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="@color/colorAccent"
            android:textSize="49sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:layout_weight="0.8"
    android:gravity="center"
    android:orientation="vertical">




    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clasificación:"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="403dp"
        />




    <TextView
        android:id="@+id/clasificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clasificación:"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="403dp"
       />

    <TextView
        android:id="@+id/personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burnout Personal:"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="403dp" />

    <TextView
        android:id="@+id/trabajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burnout Trabajo"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="403dp" />

    <TextView
        android:id="@+id/clientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burnout Clientes"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="403dp" />




</LinearLayout>





<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_weight="0.8"
    android:orientation="vertical">







        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="450dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logotres"
            android:contentDescription=""
            tools:ignore="ContentDescription"
            android:layout_marginRight="8dp"/>







</LinearLayout>




</LinearLayout>
